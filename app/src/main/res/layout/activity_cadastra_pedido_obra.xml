<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.lemobs_sigelu.gestao_estoques.ui.cadastra_pedido.cadastra_pedido_1_3_obra.CadastraObraViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:id="@+id/ll_all">

        <com.lemobs_sigelu.gestao_estoques.ui.cadastra_pedido.TopStepper
                android:id="@+id/top_stepper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ll_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/top_stepper"
                app:layout_constraintTop_toBottomOf="@id/top_stepper"
                android:text="@string/info_pedido"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="@dimen/espacamento_maximo_2"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_selecione_fornecedor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="@dimen/espacamento_grande"
                android:paddingBottom="@dimen/espacamento_medio"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/ll_titulo"
                app:layout_constraintLeft_toLeftOf="@id/ll_titulo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/espacamento_maximo_2">

            <TextView
                    android:id="@+id/tv_nucleo_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Selecione uma obra"
                    android:textSize="16sp" />


            <Spinner
                    android:id="@+id/spinner_obra"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/espacamento_curto"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nucleo_titulo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    style="@style/Widget.AppCompat.Spinner.Underlined" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.lemobs_sigelu.gestao_estoques.ui.cadastra_pedido.BottomStepper
                android:id="@+id/bottom_stepper"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>