<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  xmlns:tools="http://schemas.android.com/tools"
		  package="com.lemobs_sigelu.gestao_estoques">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name=".App"
            android:allowBackup="true"
			android:label="@string/app_name"
            android:icon="@mipmap/icone_round"
			android:roundIcon="@mipmap/icone_round"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			tools:ignore="GoogleAppIndexingWarning">

        <!-- MAIN ACTIVITY -->
        <activity
                android:name="com.lemobs_sigelu.gestao_estoques.ui.main.MainActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LISTA PEDIDO ACTIVITY -->
        <activity android:name=".ui.lista_pedidos.ListaPedidoActivity"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait"/>

        <!-- LISTA MATERIAL ACTIVITY -->
        <activity
                android:name="com.lemobs_sigelu.gestao_estoques.ui.lista_materiais.ListaMaterialActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>

        <!-- ENTREGA MATERIAIS PEDIDO ACTIVITY -->
        <activity
                android:name=".ui.entrega_materiais_pedido.EntregaMateriaisPedidoActivity"
                android:label="Cadastrar Recebimento"/>

        <!-- VISUALIZA PEDIDO ACTIVITY -->
        <activity android:name="com.lemobs_sigelu.gestao_estoques.ui.pedido.visualiza_pedido.VisualizarPedidoActivity"
                  android:label="Visualizando Pedido" />

        <!-- CADASTRA PEDIDO DESTINO ACTIVITY -->
        <activity android:name="com.lemobs_sigelu.gestao_estoques.ui.cadastra_pedido.cadastra_pedido_destino.CadastraPedidoDestinoActivity"
                  android:label="Cadastrar Pedido" />

        <!-- SELECIONA MATERIAL PEDIDO ACTIVITY -->
        <activity android:name="com.lemobs_sigelu.gestao_estoques.ui.recebimento.seleciona_itemenvio_recebimento.SelecionaItemEnvioRecebimentoActivity"
                  android:label="Adicione material recebido" />

        <!-- CONFIRMA MATERIAL PEDIDO ACTIVITY -->
        <activity android:name="com.lemobs_sigelu.gestao_estoques.ui.recebimento.confirma_recebimento.ConfirmaRecebimentoActivity"
                  android:label="Materiais Solicitados"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="stateHidden"
                  android:theme="@style/AppThemeNoActionBar" />

        <!-- CADASTRA MATERIAL PEDIDO ACTIVITY -->
        <activity android:name="com.lemobs_sigelu.gestao_estoques.ui.recebimento.cadastra_item_recebimento.CadastraItemRecebimentoActivity"
                  android:label="Preencha a quantidade recebida"/>

        <!-- LOGIN ACTIVITY -->
        <activity android:name=".ui.login.LoginActivity"
                  android:label="SIGELU Estoques - Login">
        </activity>

        <!-- SELECIONA ENVIO ACTIVITY -->
        <activity android:name="com.lemobs_sigelu.gestao_estoques.ui.recebimento.seleciona_envio_recebimento.SelecionaEnvioRecebimentoActivity"
                  android:label="Selecione o envio">
        </activity>

        <!-- SELECIONA ITEM ACTIVITY -->
        <activity android:name=".ui.cadastra_pedido.seleciona_item_pedido.SelecionaItemPedidoActivity"
                  android:label="Selecione um item"/>

        <!-- CADASTRA ITEM PEDIDO ACTIVITY -->
        <activity android:name=".ui.cadastra_pedido.cadastra_item_pedido.CadastraItemPedidoActivity"
                  android:label="Preencha a quantidade solicitada"/>

        <!-- CONFIRMA CADASTRO PEDIDO -->
        <activity android:name= ".ui.cadastra_pedido.confirma_cadastro_pedido.ConfirmaCadastroPedidoActivity"
                  android:label="Preencha a quantidade solicitada"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="stateHidden"
                  android:theme="@style/AppThemeNoActionBar"/>

        <!-- CADASTRA ENVIO ACTIVITY -->
        <activity android:name=".ui.envio.cadastra_envio_informacoes_basicas.CadastraEnvioActivity"
                  android:label="Cadastrar Envio"/>

        <!-- SELECIONA ITEM ENVIO ACTIVITY -->
        <activity android:name=".ui.envio.seleciona_item_envio.SelecionaItemEnvioActivity"
                  android:label="Selecione um item"/>

        <!-- SELECIONA ITEM ENVIO ACTIVITY -->
        <activity android:name=".ui.envio.cadastra_item_envio.CadastraItemEnvioActivity"
                  android:label="Selecione um item"/>

    </application>
</manifest>
